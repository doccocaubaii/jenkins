pipeline {
    agent any
    stages {

        stage("build") {
            steps {
                echo 'App start building...'
                echo 'building the application...'
            }
        }

        stage("test") {
            steps {
                echo 'testing the application...'
            }
        }

        stage("deploy") {
            steps {
                echo 'deploy the application...'
            }
        }

    }
}